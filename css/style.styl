/*GLOBAL*/
*
  font-family: 'Francois One', sans-serif
.clear
  clear:both

/*FUNCTIONS*/
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

/*HEADER*/
#main
  max-width: 80%
  margin: auto
  #header
    padding: 1%;
    position: fixed;
    width: 80%;
    background-color:white
    z-index:1000
    nav
      width:74%;
      margin:0 auto;
      margin: 0 6% 0 14%;
      display: inline-block;
    .header-link
      display:inline-block;
      font-family: 'Pacifico', cursive;
      text-decoration: none;
      font-size: 1.5em;
      color: black;
      margin: 1% 3%;
    h1
      text-align: center;
      font-size: 2.5em;
      margin: 0 3%;
      display:inline-block;
      vertical-align: top;
    li
      cursor pointer
      width:20%
      display:inline-block
    .social-icons
      display:inline-block;
      width:5%;
      i
        margin:0 2%
    h3
      text-decoration none
      margin 0 1%
      display inline-block
/*SIDEBAR*/
  #sidebar
    padding-top: 10%
    width: 20%
    position:fixed
    a
      font-size: 1.5em;
      color: black;
      text-decoration: none;
      display: block;
 /*APPVIEW*/
  ul#favourites
    -webkit-margin-before: 0em
    -webkit-margin-after: 0em
    -webkit-margin-start: 0px
    -webkit-margin-end: 0px
    -webkit-padding-start: 0px
    width:70%;
    display:inline-block;
    vertical-align:top;
    margin-left:20%;
    padding-top:17%;
    .picView
      p
        text-align:center
        font-size:1.5em
      .product-div
        position: relative
        width: 33%
        display: inline-block
        img
          width: 100%;
          height:100%;
          display: block;
      .hidden
        display:none
      .showProductInfoDiv
        position:absolute
        a
          margin-top: 40%;
          display: block;
          text-align: center;
          text-decoration: none;
          color: black;

  .articleNavSidebarView
    list-style: none
    padding-top: 100px
    width:20%
    display:inline-block
    position:fixed
    a
      text-decoration:none
  .articleView
    display:inline-block
    vertical-align:top
    width:80%
    display: inline-block
    vertical-align: top
    width: 75%
    padding-top: 10%
    margin-left:30%


    