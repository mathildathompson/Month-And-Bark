/*FUNCTIONS*/
border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

/*HEADER*/
#main
  max-width: 80%
  margin: auto
  h3
    width:20%
    display:inline-block

/*APPVIEW*/
ul#posts
  -webkit-margin-before: 0em
  -webkit-margin-after: 0em
  -webkit-margin-start: 0px
  -webkit-margin-end: 0px
  -webkit-padding-start: 0px
  li.pic 
    cursor: pointer
    width:30%
    display:inline-block
    vertical-align: top
    margin:1%
    img
      max-width:70%

/*PICVIEW*/
.picView
  position: fixed
  top: 0px
  left: 0px
  width: 100%
  height: 100%
  background-color: rgba(0, 0, 0, 0.7)
    
  .pic-image-view  
    position:absolute
    left:30%
    width:30%
  .pic-image
    display:inline-block
  .big
    float: left 
  .small
    margin-bottom: 1%
    width: 21.2%;
    display:inline-block
    vertical-align: top
    